{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "es2015"
    ]
  },
  "exclude": [
    "lib",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
